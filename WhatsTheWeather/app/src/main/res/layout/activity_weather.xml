<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ahlberg.jacob.whatstheweather.WeatherActivity"
    android:background="@color/backgroundColor">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_gravity="start"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingBottom="0dp"
        android:background="@color/colorNavigationBar"
        android:paddingTop="0dp" />

    <TextView
        android:text="Today, May 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="25sp"
        android:textColor="@color/textColor"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="74ยบ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70sp"
        android:id="@+id/textView2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textColor="@color/textColor"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:text="64ยบ"
        android:layout_width="57dp"
        android:layout_height="46dp"
        android:textSize="30dp"
        android:textColor="@color/textColor"
        app:layout_constraintRight_toLeftOf="@+id/imageView2"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.07"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/sunny"
        android:id="@+id/imageView2"
        android:contentDescription="@string/weatherLogo"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="Huddinge, Sweden"
        android:layout_width="241dp"
        android:layout_height="42dp"
        android:id="@+id/textView3"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        android:textColor="@color/textColor"
        tools:layout_editor_absoluteY="220dp" />

    <TextView
        android:text="Clear"
        android:id="@+id/textView5"
        android:layout_width="89dp"
        android:layout_height="31dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:textColor="@color/textColor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.25" />


</android.support.constraint.ConstraintLayout>
