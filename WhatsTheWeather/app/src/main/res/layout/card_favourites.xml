<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#ECECEC">


    <TextView
        android:id="@+id/cityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="State"
        android:textSize="30sp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:contentDescription="@string/line"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:srcCompat="@drawable/line" />

    <TextView
        android:id="@+id/latitudeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Latitude"
        android:textSize="16sp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="60dp" />

    <TextView
        android:id="@+id/longitudeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:text="Longitude"
        android:textSize="16sp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/latitudeView" />

    <TextView
        android:id="@+id/latitudeResultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="205dp"
        card_view:layout_constraintBaseline_toBaselineOf="@+id/latitudeView"
        card_view:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/longitudeResultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="205dp"
        card_view:layout_constraintBaseline_toBaselineOf="@+id/longitudeView"
        card_view:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#cb0909"
        android:text="Remove"
        android:textColor="@color/textColor"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="284dp" />

</android.support.constraint.ConstraintLayout>
